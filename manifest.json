{
  "manifest_version": 3,
  "name": "Copy Captions",
  "version": "1.0",
  "description": "Copy and download captions on any YT video, if available",
  "permissions": [
    "clipboardWrite",
    "notifications",
    "tabs",
    "scripting"
  ],
  "host_permissions": ["*://*.youtube.com/*"],
  "icons": {
    "48": "images/icon-64.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "scripts/serviceWorker.js"
  }
}